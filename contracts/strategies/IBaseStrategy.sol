/// @title IStrategy Interface
/// @notice BaseStrategy is the base contract that all strategies should inherit from and uses this interface.
interface IBaseStrategy {
    /// ======================
    /// ======= Errors =======
    /// ======================

    /// @notice Error when the sender is not authorized
    error BaseStrategy_Unauthorized();

    /// @notice Error when the strategy is already initialized
    error BaseStrategy_AlreadyInitialized();

    /// @notice Error when the pool ID is invalid
    error BaseStrategy_InvalidPoolId();

    /// @notice Error when the withdraw amount leaves the pool with insufficient funds
    error BaseStrategy_WithdrawMoreThanPoolAmount();

    /// ======================
    /// ======= Events =======
    /// ======================

    /// @notice Emit after recipients get registered
    /// @param _recipient The address of the recipient
    /// @param _data The data to use to register the recipient
    event Registered(address indexed _recipient, bytes _data);

    /// @notice Emits after recipients got allocated amount
    /// @param _recipient The address of the recipient
    /// @param _sender The address of the sender
    /// @param _amount The amounts to allocate
    /// @param _data The data to use to allocate to the recipient
    event Allocated(address indexed _recipient, address indexed _sender, uint256 _amount, bytes _data);

    /// @notice Emit after recipients got distributed
    /// @param _recipient The ID of the recipient
    /// @param _data The data to use to distribute to the recipients
    event Distributed(address indexed _recipient, bytes _data);

    /// @notice Emits after a withdrawal is made
    /// @param _token The address of the token
    /// @param _amount The amount to withdraw
    /// @param _recipient The address to withdraw to
    event Withdrew(address indexed _token, uint256 _amount, address _recipient);

    /// @notice Emits when the pool is initialized
    /// @param poolId The ID of the pool
    /// @param data The data passed to the 'initialize' function
    event Initialized(uint256 poolId, bytes data);

    /// ======================
    /// ======= Views ========
    /// ======================
    /// @notice Getter for the address of the Allo contract.
    /// @return _allo The 'Allo' contract
    function getAllo() external view returns (IAllo _allo);

    /// @notice Getter for the strategy ID.
    /// @return _strategyId The ID of the strategy
    function getStrategyId() external view returns (bytes32 _strategyId);

    /// @notice Getter for the 'poolId' for this strategy.
    /// @return _poolId The ID of the pool
    function getPoolId() external view returns (uint256 _poolId);

    /// @notice Checks the amount of tokens in the pool.
    /// @return _poolAmount The balance of the pool
    function getPoolAmount() external view returns (uint256 _poolAmount);

    /// ======================
    /// ===== Functions ======
    /// ======================

    /// @notice Initializes the strategy.
    /// @dev The default BaseStrategy version will not use the data if a strategy wants to use it, they will overwrite it,
    ///      use it, and then call super.initialize().
    /// @param _poolId The ID of the pool
    /// @param _data The encoded data
    function initialize(uint256 _poolId, bytes memory _data) external;

    /// @notice Increases the pool amount.
    /// @param _amount The amount to increase the pool by
    function increasePoolAmount(uint256 _amount) external;

    /// @notice Withdraws tokens from the pool.
    /// @param _token The address of the token
    /// @param _amount The amount to withdraw
    /// @param _recipient The address to withdraw to
    function withdraw(address _token, uint256 _amount, address _recipient) external;

    /// @notice Registers recipients to the strtategy.
    /// @param _recipients The addresses of the recipients to register
    /// @param _data The data to use to register the recipient
    /// @param _sender The address of the sender
    /// @return _recipientIs The recipientIds
    function register(address[] memory _recipients, bytes memory _data, address _sender)
        external
        payable
        returns (address[] memory _recipientIs);

    /// @notice Allocates to recipients.
    /// @param _recipients The addresses of the recipients to allocate to
    /// @param _amounts The amounts to allocate to the recipients
    /// @param _data The data to use to allocate to the recipient
    /// @param _sender The address of the sender
    function allocate(address[] memory _recipients, uint256[] memory _amounts, bytes memory _data, address _sender)
        external
        payable;

    /// @notice Distributes funds to recipients.
    /// @param _recipientIds The IDs of the recipients
    /// @param _data The data to use to distribute to the recipients
    /// @param _sender The address of the sender
    function distribute(address[] memory _recipientIds, bytes memory _data, address _sender) external;
}
